<%= render 'pages/home'  unless user_signed_in? %>

<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(pin.image.url(:medium)), pin %>
      <div class="panel-body">
        <p><%= pin.description %></p>
        <p><strong><%= pin.user.name if pin.user %></strong></p>
          <%= link_to raw('<span class="glyphicon glyphicon-hand-up"></span>'), like_pin_path(pin), method: :put %>
          
          <%= link_to  raw('<span class="glyphicon glyphicon-hand-down"></span>'), dislike_pin_path(pin), method: :put %>
          <div class="vote">
          <%= pin.votes.size %>
          </div>
        <% if pin.user == current_user %>
          <div class="actions">
          <%= link_to raw('<span class="glyphicon glyphicon-edit"></span>Edit'), edit_pin_path(pin) %>
          <%= link_to raw('<span class="glyphicon glyphicon-trash"></span>Destroy'), pin, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="center">

</div>