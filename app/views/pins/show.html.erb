<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-info">
		<div class="panel-heading center show-pin">
			<%= image_tag @pin.image.url(:medium) %>
		</div>
		<div class="panel-body">
		<p><%= @pin.description %></p>
		
		 
      <p><strong class="show-image"><%= link_to image_tag(@pin.user.image.url(:tiny)), user_path(@pin.user)if @pin.user %></strong>
			<strong><%= link_to @pin.user.name, user_path(@pin.user)if @pin.user %></strong></p>
      <p><%= @pin.user.name %></p>
		<div class="comment-box"><%= commontator_thread(@pin)%></div>
		<div class="edit-links">
		<% if @pin.user == current_user %>
			<%= link_to raw('<span class="glyphicon glyphicon-edit edit-links"></span> Edit'), edit_pin_path(@pin) %> |
			<%= link_to raw('<span class="glyphicon glyphicon-trash edit-links"></span> Delete'), edit_pin_path(@pin) %>
		<% end %>
     </div>
      <%= link_to "Back", pins_path, class: "btn btn-info" %>
		</div>
	</div>
</div>


