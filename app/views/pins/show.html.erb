<%= link_to raw('<span class="glyphicon glyphicon-backward"></span>Back'), pins_path %>

<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="panel panel-info">
		<div class="panel-heading center">
			<%= image_tag @pin.image.url(:medium) %>
		</div>
		<div class="panel-body">
		<p><%= @pin.description %></p>
		<p><strong><%= @pin.user.name if @pin.user %></strong></p>
		<div class="comment-box"><%= commontator_thread(@pin)%></div>
		<div class="edit-links">
		<% if @pin.user == current_user %>
			<%= link_to raw('<span class="glyphicon glyphicon-edit edit-links"></span>'), edit_pin_path(@pin) %> |
			<%= link_to raw('<span class="glyphicon glyphicon-trash edit-links"></span>'), edit_pin_path(@pin) %>
		</div>
		<% end %>
		</div>
	</div>
</div>


